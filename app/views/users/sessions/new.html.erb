<div class="container">
  <div class="row">
    <div class="col s12">
      <h3 class="title">
        ログイン
      </h3>
    </div>


    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="row">
        <div class="input-field col s12">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "" %>
          <%= f.label :email, class: "" %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
          <%= f.label :password, class: "label" %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <% if devise_mapping.rememberable? %>
            <label>
              <%= f.check_box :remember_me, class: "" %>
              <span><%= f.label :remember_me %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.button type: "submit" "Sign in", class: "btn waves-effect waves-light" do %>
            ログイン
          <% end %>
        </div>
      </div>

    <% end %>

    <%= render "users/shared/links" %>

  </div>
</div>