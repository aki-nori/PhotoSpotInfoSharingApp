<% post.comments.each do |comment| %>
  <div class="row">
    <div class="col s10 offset-s1">
      <div style="float: right; margin-right: 30px;">
      <% if comment.user == current_user %>
        <%= link_to comment_path(comment), method: :delete, :class => "close",  remote: true do %>
          <i class="fas fa-times"></i>
        <% end %>
      <% end %>
      </div>
      <%= comment.body %>
      <br>
      <br>
      <%= link_to user_path(comment.user) do %>
        <div class="chip">
          <%= image_tag comment.user.profile_image.url, alt: "Contact Person", class: "circle", style: "width:32px; height: 32px; object-fit: cover;" %>
          <%= comment.user.name %>
        </div>
      <% end %>
      
      <div style="float: right; margin-right: 30px; margin-top: 5px;">
        <span style="font-size: 80%; color: #AAA"><%= time_ago_in_words(comment.created_at) %></span>
      </div> 
    </div>
  </div>
  <div class="row">
    <div class="col s10 offset-s1">
      <div class="divider"></div>
    </div>
  </div>
<% end %>

<div class="row" style="margin: 0;">
  <div class="col s10 offset-s1">
    <%= form_with model: comment do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :post_id, value: post.id %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_area :body, class: "materialize-textarea" %>
          <label for="textarea1">コメント</label>
          <%= button_tag type: "submit", class: "btn waves-effect waves-light" do %>送信
            <i class="material-icons right">send</i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div> 
