<h1>スポット登録画面</h1>
<%= form_with model: @place do |f| %>
  <div class="form-group">
    <%= f.label :title, "スポット名" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :geocode, "geocode" %>
    <%= f.text_field :geocode, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :infomation, "infomation" %>
    <%= f.text_area :infomation, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :images, "写真" %>
    <%= f.file_field :images, multiple: true, class: "form-control-file" %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, "カテゴリ" %>
    <%= f.select :category_id, @categories.map{|category| [category.name, category.id]} %>
  </div>
  <%= f.submit "投稿", class: "btn btn-primary" %>
<% end %>