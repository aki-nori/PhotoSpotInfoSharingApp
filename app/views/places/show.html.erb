<div class="section">
  <div class="container">
    <div class="example">
      <figure class="image">
        <div class="img-wrap">
        <% if @place.posts.present? %>
        <%= image_tag @place.posts.first.images[0].url, style: "width: 100%; height: 400px; object-fit: cover; " %>
        <% end %>
        </div>
      </figure>
      <p class="is-large"><%= @place.name %></p>
    </div>

  </div>
</div>

<div class="control has-text-centered">
  <%= link_to "この場所で投稿する", new_place_post_path(@place), class: "button is-link" %>
</div>

    <%= render partial: 'posts/index', locals: {posts: @place.posts} %>
  

<style>
.example {
  position: relative;
  }

.example p {
  position: absolute;
  top: 50%;
  left: 50%;
  -ms-transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
  margin:0;
  padding:0;
  font-size: 10vmin;
  color: white;
  font-weight: bold;
  }

.example img {
  width: 100%;
  }

.img-wrap {
  background-color: #000000;
}
.img-wrap img {
  display: block;
  opacity: 0.7;
}
</style>

