<% if user_signed_in? %>

  <% unless post.like_user(current_user.id).blank? %>
    <%= link_to post_like_path(post_id: post.id ,id: post.like_user(current_user.id)), method: :delete, remote: true do %>
      <div class="vertical_like">
        <i class="fas fa-thumbs-up"></i>
        <span class="red-text">
          <%= post.likes.count %>
        </span>
      </div>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post.id), method: :post, remote: true do %>
      <div class="vertical_like">
        <i class="far fa-thumbs-up"></i>
        <span class="grey-text text-darken-2">
          <%= post.likes.count %>
        </span>
      </div>
    <% end %>
  <% end %>

<% else %>

  <% if post.likes.count > 0 %>
    <div class="vertical_like">
      <i class="fas fa-thumbs-up"></i>
      <span class="red-text">
        <%= post.likes.count %>
      </span>
    </div>
  <% else %>
    <div class="vertical_like">
      <i class="far fa-thumbs-up"></i>
      <span class="grey-text text-darken-2">
        <%= post.likes.count %>
      </span>
    </div>
  <% end %>

<% end %>