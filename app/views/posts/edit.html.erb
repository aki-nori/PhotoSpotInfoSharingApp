<div class="container">
  <div style="margin-bottom: 0px;">
    <br>
    <%= form_with model: @post, local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :title, class: "validate", id: "input_text" %>
          <%= f.label :title, "タイトル", class: "active" %>
          <span class="helper-text" data-error="wrong" data-success="right">1〜30字</span>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.select :place_id, @places.map{|place| [place.name, place.id]}, {}, {selected: @post.place.id, disabled: true} %>
          <%= f.label :place_id, "場所", class: "active" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.date_field :date, class: "validate" %>
          <%= f.label :date, "訪問日", class: "active" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.time_field :time, class: "validate" %>
          <%= f.label :time, "時間", class: "active" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.select :rate, [["★", 1], ["★★", 2], ["★★★", 3], ["★★★★", 4], ["★★★★★", 5]], class: "" %>
          <%= f.label :rate, "オススメ度", class: "active" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_area :access, class: "materialize-textarea" %>
          <%= f.label :access, "アクセス方法", class: "active" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_area :notify, class: "materialize-textarea" %>
          <%= f.label :notify, "注意事項", class: "active" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :url, class: "" %>
          <%= f.label :url, "参考URL", class: "active" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_area :comment, class: "materialize-textarea" %>
          <%= f.label :comment, "コメント", class: "active" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_area :camera, class: "materialize-textarea" %>
          <%= f.label :camera, "機材", class: "active" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "materialize-textarea" %>
          <%= f.label :tag_list, "タグ", class: "active" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <div class="file-field input-field">
            <div class="btn">
              <span>写真</span>
              <%= f.file_field :images, multiple: true, class: "form-control-file" %>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
            </div>
          </div>
        </div>
      </div>
        
        <div class="input-field col s12">
          <%= f.button type: "submit", class: "btn waves-effect waves-light" do %>保存
            <!-- <i class="material-icons right">send</i> -->
          <% end %>
          <button class="btn">キャンセル</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
