<div class="container">
  <div class="section">
    <div class="row">
      <% posts.each do |post| %>
        <div class="col s12 m4">
          <div class="card">
            <div class="card-image" style="">
              <%= link_to post_path(post) do %>
                <% if post.images[0] %>
                  <%= image_tag post.images[0].url, style: "height: 250px; object-fit: cover;" %>
                <% else %>
                  <%= image_tag "no_image.jpg", style: "height: 250px; object-fit: cover;" %>
                <% end %>
              <% end %>
              <!-- <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a> -->
            </div>
            <div class="card-content" style="height: 250px;">
              <%= link_to place_path(post.place) do %>
                <p><i class="fas fa-map-marker-alt"></i><b><%= " #{post.place.name}" %></b></p>
              <% end %>
              <%= link_to post_path(post) do %>
                <span class="card-title"><%= post.title %></span>
              <% end %>
              <p><%= post.comment.truncate(55) %></p>
              <div class="right">
                <i class="fas fa-comment">コメント数 <%= post.comments.count %></i>
              </div>
            </div>
            <div class="card-action" style="height: 60px;">
              <%= link_to user_path(post.user) do %>
                <%= image_tag post.user.profile_image.url, class: "is-rounded circle responsive-img", style: "width:30px; height: 30px; object-fit: cover; float: left;" %>
                <b><p style="margin: 0 5px; line-height: 28px; display: inline-block;"><%= post.user.name %></p></b>
              <% end %>
              <div style="float: right;">
              <i class="fas fa-pen-nib"></i><%= " #{post.user.posts.count}" %>
              <i class="fas fa-heart" style="padding-left: 4px;"></i><%= " #{Relationship.where(following_id: post.user.id).count}" %>
              <i class="fas fa-compass" style="padding-left: 4px;"></i><%= " #{post.user.went_to_gos.count}" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

